#include <iostream>
using namespace std;
int main() {
int rows, columns;
    cout << "Enter number of rows: ";
    cin >> rows;
    cout << "Enter number of columns: ";
    cin >> columns;
    char cinema_array[20][20];
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            cinema_array[i][j] = 'F';
        }
    }
    cout<<"Seat layout: "<<endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            cout<<" ( "<< i+1 <<" - "<< j+1 <<" ) ";
        }
        cout<<endl;
    }
    int choice;
    while (true) {
        cout<<"Enter your choice \n 1. To Book a Seat \n 2.Show the seat map \n 3. exit the booking system"<<endl;
        cout<<"Here write your choice: ";
        cin>>choice;
        if (choice == 1) {
            int r,c;
            cout<<"Enter the row in which you want to reserve the seat: ";
            cin>>r;
            cout<<"Enter the seat number (column): ";
            cin>>c;
            if (r<1 || r>rows || c<1 || c>columns ) {
                cout<<"Wrong choice"<<endl;
            }
            else {
                if (cinema_array[r-1][c-1] == 'F') {
                    cinema_array[r-1][c-1] = 'R';
                    cout<<"The seat is booked successfully!"<<endl;
                }
                else {
                    cout<<"Seat is already reserved, Pick another one!"<<endl;
                }
            }
        }
        else if (choice == 2) {
            for (int i = 0; i < rows; i++) {
                for (int j = 0; j < columns; j++) {
                    cout<<"( "<< i+1 <<" - "<< j+1 <<" "<<cinema_array[i][j]<<")";
                }
                cout<<endl;
            }
        }
        else if (choice == 3) {
            cout<<"Blasting off the cinema have a good movie night................ "<<endl;
            break;
        }
        else {
            cout<<"Invalid choice"<<endl;
        }
    }
    return 0;
}
